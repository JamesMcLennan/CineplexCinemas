<script src="~/js/card.js"></script>

<div class='card-wrapper'></div><br />

<form asp-controller="Movies" asp-action="Index">

    <div class="form-horizontal">
        <h4>Credit Card Details</h4>
        <hr />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="CardNumber" name="number" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CardNumber" name="number" class="form-control" />
                <span asp-validation-for="CardNumber" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="FirstName" name="first-name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="FirstName" name="first-name" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="LastName" name="last-name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="LastName" name="last-name" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ExpiryDate" name="expiry" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ExpiryDate"name="expiry" class="form-control" />
                <span asp-validation-for="ExpiryDate" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="CVC" name="cvc" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CVC" name="cvc" class="form-control" />
                <span asp-validation-for="CVC" class="text-danger" />
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<script>
    var card = new Card({
        form: 'form',
        container: '.card-wrapper',

        formSelectors: {
            nameInput: 'input[name="first-name"], input[name="last-name"]'
        }
    });
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

